{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run C++ in VS Code Terminal",
      "type": "cppdbg",
      "request": "launch",
      "program": "${fileDirname}/${fileBasenameNoExtension}.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${fileDirname}",
      "environment": [],
      "console": "integratedTerminal",          // ðŸ‘ˆ KEY PART
      "MIMode": "gdb",
      "miDebuggerPath": "C:/MinGW/bin/gdb.exe", // adjust if needed
      "setupCommands": [
        {
          "description": "Enable pretty printing",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build cpp"
    }
  ]
}
